<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Oryzone\Bundle\MediaStorageBundle\Entity\Media">

        <field name="mediaId" column="media_id" type="string" length="255" />

        <field name="mediaName" column="media_name" type="string" length="255" />

        <field name="mediaType" column="media_type" type="string" length="255" />

        <field name="external" column="is_external" type="boolean" default="false" />

    </mapped-superclass>

</doctrine-mapping>