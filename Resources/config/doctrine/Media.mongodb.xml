<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                        http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <mapped-superclass name="Oryzone\Bundle\MediaStorageBundle\Document\Media">

        <field name="mediaId" fieldName="media_id" type="string"/>

        <field name="mediaName" fieldName="media_name" type="string"/>

        <field name="mediaType" fieldName="media_type" type="string"/>

        <field name="external" fieldName="is_external" type="boolean"/>

    </mapped-superclass>

</doctrine-mongo-mapping>